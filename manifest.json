{
  "name": "Tweetmeme",
  "short_name": "Tweetmeme",
  "version": "3.0",
  "manifest_version": 2,
  "default_locale" : "en",
  "description": "Simpler Tweet consumption for Techmeme",
  "web_accessible_resources" : [ "scripts/tweetmeme.js", "scripts/jquery-1.7.2.min.js" ],

  "content_scripts": [
    {
      "matches": ["*://*.techmeme.com/*"],
      "js": ["content.js"],
      "run_at" : "document_end"
    }
  ]
}